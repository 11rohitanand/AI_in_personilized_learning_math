    {
      "cell_type": "code",
      "source": [
        "import streamlit as st\n",
        "import random # We'll need this for random selection\n",
        "\n",
        "#step1\n",
        "\n",
        "# Your expanded question_bank dictionary\n",
        "question_bank = {\n",
        "    \"addition\": [\n",
        "        {\"question\": \"What is 5 + 3?\", \"options\": [\"7\", \"8\", \"9\", \"10\"], \"correct_answer\": \"8\"},\n",
        "        {\"question\": \"Add: 12 + 7?\", \"options\": [\"18\", \"19\", \"20\", \"21\"], \"correct_answer\": \"19\"},\n",
        "        {\"question\": \"What is 20 + 15?\", \"options\": [\"30\", \"35\", \"40\", \"25\"], \"correct_answer\": \"35\"},\n",
        "        {\"question\": \"If you have 10 apples and get 8 more, how many do you have?\", \"options\": [\"16\", \"17\", \"18\", \"19\"], \"correct_answer\": \"18\"},\n",
        "        {\"question\": \"Calculate: 45 + 23?\", \"options\": [\"67\", \"68\", \"70\", \"72\"], \"correct_answer\": \"68\"},\n",
        "    ],\n",
        "    \"subtraction\": [\n",
        "        {\"question\": \"What is 10 - 4?\", \"options\": [\"5\", \"6\", \"7\", \"8\"], \"correct_answer\": \"6\"},\n",
        "        {\"question\": \"Subtract: 25 - 10?\", \"options\": [\"10\", \"15\", \"20\", \"25\"], \"correct_answer\": \"15\"},\n",
        "        {\"question\": \"What is 50 - 20?\", \"options\": [\"20\", \"25\", \"30\", \"35\"], \"correct_answer\": \"30\"},\n",
        "        {\"question\": \"If you have 15 cookies and eat 6, how many are left?\", \"options\": [\"7\", \"8\", \"9\", \"10\"], \"correct_answer\": \"9\"},\n",
        "        {\"question\": \"Calculate: 70 - 35?\", \"options\": [\"30\", \"35\", \"40\", \"45\"], \"correct_answer\": \"35\"},\n",
        "    ],\n",
        "    \"multiplication\": [\n",
        "        {\"question\": \"What is 4 x 5?\", \"options\": [\"10\", \"15\", \"20\", \"25\"], \"correct_answer\": \"20\"},\n",
        "        {\"question\": \"Multiply: 7 x 8?\", \"options\": [\"49\", \"56\", \"63\", \"70\"], \"correct_answer\": \"56\"},\n",
        "        {\"question\": \"What is 10 x 3?\", \"options\": [\"20\", \"25\", \"30\", \"35\"], \"correct_answer\": \"30\"},\n",
        "        {\"question\": \"If there are 3 groups of 6 students, how many students are there?\", \"options\": [\"12\", \"15\", \"18\", \"21\"], \"correct_answer\": \"18\"},\n",
        "        {\"question\": \"Calculate: 11 x 4?\", \"options\": [\"33\", \"44\", \"55\", \"66\"], \"correct_answer\": \"44\"},\n",
        "    ],\n",
        "    \"division\": [\n",
        "        {\"question\": \"What is 12 / 3?\", \"options\": [\"2\", \"3\", \"4\", \"6\"], \"correct_answer\": \"4\"},\n",
        "        {\"question\": \"Divide: 40 / 5?\", \"options\": [\"6\", \"7\", \"8\", \"9\"], \"correct_answer\": \"8\"},\n",
        "        {\"question\": \"What is 100 / 10?\", \"options\": [\"5\", \"8\", \"10\", \"12\"], \"correct_answer\": \"10\"},\n",
        "        {\"question\": \"Share 24 candies equally among 4 friends. How many does each get?\", \"options\": [\"4\", \"5\", \"6\", \"8\"], \"correct_answer\": \"6\"},\n",
        "        {\"question\": \"Calculate: 63 / 9?\", \"options\": [\"6\", \"7\", \"8\", \"9\"], \"correct_answer\": \"7\"},\n",
        "    ]\n",
        "}\n",
        "\n",
        "# --- This is where we'll continue our Streamlit app ---\n",
        "st.title(\"Personalized Math Test\")\n",
        "st.write(\"Please answer the 6 random questions below.\")\n",
        "\n",
        "#step2\n",
        "\n",
        "st.title(\"Personalized Math Test\")\n",
        "st.write(\"Please answer the 6 random questions below.\")\n",
        "\n",
        "# --- Select 6 random questions ---\n",
        "# 1. Create a flat list of all questions with their chapter info\n",
        "all_questions_flat = []\n",
        "for chapter, questions in question_bank.items():\n",
        "    for q in questions:\n",
        "        all_questions_flat.append({\"chapter\": chapter, **q}) # Add chapter info to each question\n",
        "\n",
        "# 2. Use st.session_state to store the selected random questions\n",
        "#    This ensures the same 6 questions are shown throughout a user's session\n",
        "if 'selected_questions' not in st.session_state:\n",
        "    st.session_state.selected_questions = random.sample(all_questions_flat, 6) # Select 6 unique random questions\n",
        "\n",
        "selected_questions = st.session_state.selected_questions\n",
        "\n",
        "# Initialize a dictionary to store student's answers for these 6 questions\n",
        "# We'll store the actual selected option for each question presented\n",
        "if 'student_answers_current_test' not in st.session_state:\n",
        "    st.session_state.student_answers_current_test = [\"\"] * len(selected_questions)\n",
        "\n",
        "# Display the 6 selected questions\n",
        "st.subheader(\"Random Math Questions\")\n",
        "for i, q_data in enumerate(selected_questions):\n",
        "    st.write(f\"**Question {i+1} ({q_data['chapter'].title()}):** {q_data['question']}\")\n",
        "\n",
        "    # Use st.radio for MCQ options\n",
        "    # The 'key' must be unique for each radio button\n",
        "    # The 'index' helps restore the selected value after a rerun\n",
        "    st.session_state.student_answers_current_test[i] = st.radio(\n",
        "        f\"Select your answer for Q{i+1}:\",\n",
        "        q_data['options'],\n",
        "        key=f\"random_q_{i}\",\n",
        "        index=q_data['options'].index(st.session_state.student_answers_current_test[i])\n",
        "              if st.session_state.student_answers_current_test[i] in q_data['options'] else 0\n",
        "    )\n",
        "\n",
        "#step3\n",
        "\n",
        "if st.button(\"Submit Test\"):\n",
        "    st.write(\"Test submitted! Analyzing your results...\")\n",
        "\n",
        "    # --- Updated Scoring Logic ---\n",
        "    chapter_scores = {}\n",
        "    chapter_question_counts = {ch: 0 for ch in question_bank.keys()} # How many questions for each chapter were displayed\n",
        "    chapter_correct_counts = {ch: 0 for ch in question_bank.keys()} # How many correct answers for each chapter\n",
        "\n",
        "    # Iterate through the 6 selected questions and student's answers\n",
        "    for i, q_data in enumerate(selected_questions):\n",
        "        chapter = q_data['chapter']\n",
        "        student_answer = st.session_state.student_answers_current_test[i]\n",
        "        correct_answer = q_data['correct_answer']\n",
        "\n",
        "        chapter_question_counts[chapter] += 1 # Count that this chapter had a question displayed\n",
        "        if student_answer == correct_answer:\n",
        "            chapter_correct_counts[chapter] += 1 # Count correct for this chapter\n",
        "\n",
        "    # Calculate percentage score for each chapter based on displayed questions\n",
        "    for chapter in question_bank.keys():\n",
        "        total_q_displayed_for_chapter = chapter_question_counts[chapter]\n",
        "        correct_q_for_chapter = chapter_correct_counts[chapter]\n",
        "\n",
        "        if total_q_displayed_for_chapter > 0:\n",
        "            score_percentage = (correct_q_for_chapter / total_q_displayed_for_chapter) * 100\n",
        "        else:\n",
        "            # If no questions from this chapter were displayed, we consider it \"Not Assessed\"\n",
        "            # For recommendation purposes, we'll assign a perfect score to avoid false recommendations.\n",
        "            score_percentage = 100\n",
